<comp>
	<HBox width="780" height="340" spacing="5">

		<VBox id="partie_gauche" width="385" height="340" spacing="5">

			<Label id="titre_membres" width="385" height="20" text="interface.tribu.titre.membres"
				   autoSize="false"/>

			<Panel id="conteneur_liste_membres" width="385" height="280">
				<!--La liste est créée dans le code-->
			</Panel>

			<!--"Barre d'outils"-->
			<HBox width="385" height="20" spacing="5">
				<PushButton id="bouton_trierParNom" width="100" height="20"
							label="interface.tribu.bouton.trierParNom"></PushButton>
				<PushButton id="bouton_trierParRang" width="100" height="20"
							label="interface.tribu.bouton.trierParRang"></PushButton>
				<CheckBox id="bouton_membresConnectes" width="100" height="20" y="4"
						  label="interface.tribu.bouton.membresConnectes"/>
			</HBox>

			<!--<CheckBox id="bouton_membresConnectes" width="385" height="20" y="6" label="interface.tribu.bouton.membresConnectes" />-->
		</VBox>


		<VBox id="partie_droite" width="385" height="340" spacing="5">

			<HBox id="onglets" width="385" height="20" spacing="1">
				<PushButton id="bouton_accueil" width="120" height="20" toggle="true"
							label="interface.tribu.bouton.accueil"></PushButton>
				<PushButton id="bouton_rangs" width="120" height="20" toggle="true"
							label="interface.tribu.bouton.rangs"></PushButton>
				<PushButton id="bouton_historique" width="120" height="20" toggle="true"
							label="interface.tribu.bouton.historique"></PushButton>
			</HBox>

			<!--Contient toutes les pages mais une seule est affichée à la fois-->
			<Panel id="pages" width="385" height="305">

				<VBox id="page_accueil" width="385" height="305" spacing="5">

					<Label id="titre_messageJour" width="385" height="40"
						   text="interface.tribu.etiquette.messageJour"
						   autoSize="false"/>

					<TextArea id="etiquette_messageJour" width="385" height="200" text=""
							  editable="false"></TextArea>

					<HBox width="385" height="20" spacing="5">
						<PushButton id="bouton_changerMessageJour" width="160" height="20"
									label="interface.tribu.bouton.changerMessageJour"></PushButton>
						<PushButton id="bouton_inviter" width="80" height="20"
									label="interface.tribu.bouton.inviter"></PushButton>

					</HBox>

					<HBox id="bloc_transformice" width="385" height="20" spacing="5">
						<Label id="label_texte_code_maison_tfm" width="120" height="20"
							   text="interface.tribu.etiquette.codeMaisonTFM"/>
						<Label id="label_code_maison_tfm" width="50" height="20" text="#code"/>
						<PushButton id="bouton_changer_code_maison_tfm" width="120" height="20"
									label="interface.tribu.bouton.changerCodeMaisonTFM"></PushButton>

					</HBox>

					<HBox id="bloc_transformice" width="385" height="20" spacing="5">
						<PushButton id="bouton_entrerMaison" width="205" height="20"
									label="interface.tribu.bouton.entrerMaisonTFM"></PushButton>
						<PushButton id="bouton_forumTribu" width="80" height="20"
									label="Forum"></PushButton>
						<PushButton id="bouton_profilTribu" width="80" height="20"
									label="texte.profil"></PushButton>
					</HBox>

				</VBox>


				<HBox id="page_rangs" width="385" height="305" spacing="7">

					<!--Bloc gauche-->
					<VBox id="page_rangs_bloc_gauche" width="130" height="305">

						<!--"Barre d'outils"-->
						<HBox width="120" height="20">
							<PushButton id="bouton_ajouter" width="120" height="20"
										label="interface.tribu.bouton.ajouterRang"></PushButton>
						</HBox>

						<!--Les rangs sont créés dynamiquement-->
						<!--<List id="liste_rangs" width="120" height="270">
							&lt;!&ndash;Les rangs sont créés dynamiquement&ndash;&gt;
						</List>-->
					</VBox>

					<!--Bloc droit-->
					<VBox id="page_rangs_bloc_droit" width="255" height="305">
						<HBox width="255" height="20">
							<Label id="etiquette_titre_rang" width="165" height="20" text="#nom_rang" autoSize="false"/>
							<PushButton id="bouton_renommer" width="80" height="20" label="interface.tribu.bouton.renommer"></PushButton>
						</HBox>

						<!--"Barre d'outils"-->
						<HBox width="255" height="20">
							<PushButton id="bouton_monter" width="80" height="20"
										label="interface.tribu.bouton.monter"></PushButton>
							<PushButton id="bouton_descendre" width="80" height="20"
										label="interface.tribu.bouton.descendre"></PushButton>
							<PushButton id="bouton_supprimer" width="80" height="20"
										label="interface.tribu.bouton.supprimer"></PushButton>
						</HBox>

						<!--Les CheckBox des droits sont créées dynamiquement-->
					</VBox>
				</HBox>

				<Panel id="page_historique" width="385" height="305">
					<TextArea id="etiquette_historique" width="385" height="305" text="" editable="false" html="true" multiline="true"/>
				</Panel>
			</Panel>
		</VBox>
	</HBox>
</comp>